#include <iostream>
using namespace std;

// Прототип функцій

void task_if39();
void task_if13();
void task_geom19();

int main() 
{
    int menu;
    cout << "(39, 13, or 19 for geom) ";
    cin >> menu;

    switch (menu) 
    {
     case 39: task_if39(); break;
     case 13: task_if13(); break;
     case 19: task_geom19(); break;
     default: cout << "Wrong task number! (Only 39, 13, 19)" << endl;
    }
    return 0;
}
// ===================== If39 =====================
// Прототип функцій
void task_if39()
{
   cout << "************* If 39 *****************" << endl;
   double x, t;
   cout << "Enter x: ";
   cin >> x;
   
   if (!cin)
    {
      cout << "Invalid input!" << endl;
      return;
   }
   
   if (x <= 0)
       t = 3*x + 2 ;
   else if (x < 1)
       t = x * x ;
   else
       t = 1;
   cout << "t(x) = " << t << endl;
}
// ===================== If13 ===================== 
// Прототип функцій
void task_if13()  
{     
    cout << "************* If 13 *****************" << endl;     
    double A, B, C;
    cout << "Enter A, B, C: ";
    cin >> A >> B >> C; 

    if (!cin) {         
        cout << "Invalid input!" << endl;
    } 

    double middle;

    // перевірка, яке число середнє
    if ((A >= B && A <= C) || (A <= B && A >= C))
        middle = A;
    else if ((B >= A && B <= C) || (B <= A && B >= C))
        middle = B;
    else
        middle = C;

    cout << "Середнє значення: " << middle << endl;
}
// ===================== Geom19 =====================
// Прототип функції
void task_geom19()
{
    cout << "************* Geometry (variant 19) *****************" << endl;

    double x, y, r;
    cout << "Enter radius r: ";
    cin >> r;
    cout << "Enter coordinates x, y: ";
    cin >> x >> y;

    if (!cin || r <= 0) 
    {
        cout << "Invalid input!" << endl;
        return;
    }
    
    // Верхня частина
    double dx = x - 0;
    double dy = y - r;
    bool outsideTopCircle = (dx * dx + dy * dy >= r * r); // ПОЗА КОЛОМ

    // Між лініями 
    bool betweenLines = (y <= -x + r && y >= -x - r);

    // У правій нижній частині  
    bool rightHalf = (x >= 0);

    // Умова належності до червоної області (варіант 19):
    bool inRedArea = outsideTopCircle && betweenLines && rightHalf;

    // Перевірка
    if (inRedArea)
        cout << "Точка належить червоній області." << endl;
    else
        cout << "Точка НЕ належить червоній області." << endl;
  }
